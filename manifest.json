{
  "manifest_version": 3,
  "name": "Acessibilidade Web - Inclusão Digital",
  "version": "1.0.0",
  "description": "Extensão para melhorar a acessibilidade de páginas web, oferecendo simplificação, ajuste de fonte, alto contraste e leitura por voz.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Configurações de Acessibilidade"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-accessibility": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Ativar/Desativar modo de acessibilidade"
    },
    "increase-font": {
      "suggested_key": {
        "default": "Ctrl+Shift+Plus",
        "mac": "Command+Shift+Plus"
      },
      "description": "Aumentar tamanho da fonte"
    },
    "decrease-font": {
      "suggested_key": {
        "default": "Ctrl+Shift+Minus",
        "mac": "Command+Shift+Minus"
      },
      "description": "Diminuir tamanho da fonte"
    },
    "toggle-contrast": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Alternar alto contraste"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["welcome.html"],
      "matches": ["<all_urls>"]
    }
  ]
}